@model WebAppSibers.Domain.Models.Project
<div class="block">
    <h2>Edit Project</h2>
</div>

<div class="block">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="ProjectName">Project Name:</label>
            <input asp-for="ProjectName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CustomerCompany">Customer Company:</label>
            <input asp-for="CustomerCompany" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ExecutorCompany">Executor Company:</label>
            <input asp-for="ExecutorCompany" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StartDate">Start Date:</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EndDate">End Date:</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Priority">Priority:</label>
            <input asp-for="Priority" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProjectManagerId">Project Manager:</label>
            <select asp-for="ProjectManagerId" asp-items="@(new SelectList(ViewBag.ProjectManagers, "Id", "FullName"))" class="form-control">
                <option value="">Select Project Manager</option>
            </select>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>