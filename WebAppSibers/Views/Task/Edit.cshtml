@model WebAppSibers.Domain.Models.Task

<div class="block">
    <h2>Edit Task</h2>
</div>

<div class="block">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="TaskName">Task Name:</label>
            <input asp-for="TaskName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AuthorId">Author:</label>
            <select asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName"))" class="form-control">
                <option value="">Select Author</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="AssigneeId">Assignee:</label>
            <select asp-for="AssigneeId" asp-items="@(new SelectList(ViewBag.Assignees, "Id", "FullName"))" class="form-control">
                <option value="">Select Assignee</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Status">Status:</label>
            <select asp-for="Status" asp-items="@(new SelectList(Enum.GetValues(typeof(WebAppSibers.Domain.Enum.TaskStatus))))" class="form-control">
                <option value="">Select Status</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Comment">Comment:</label>
            <input asp-for="Comment" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Priority">Priority:</label>
            <input asp-for="Priority" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProjectId">Project:</label>
            <select asp-for="ProjectId" asp-items="@(new SelectList(ViewBag.Projects, "Id", "ProjectName"))" class="form-control">
                <option value="">Select Project</option>
            </select>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>